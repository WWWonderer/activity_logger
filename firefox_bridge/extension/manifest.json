{
  "manifest_version": 2,
  "name": "Activity Logger Bridge",
  "version": "0.1.0",
  "description": "Relays active Firefox tab details to the local activity logger.",
  "permissions": [
    "tabs",
    "activeTab",
    "nativeMessaging"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "activity-logger-bridge@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "websiteActivity"
        ]
      }
    }
  }
}
